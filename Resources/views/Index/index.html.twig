{% extends 'ZzPyroBundle::layout.html.twig' %}

{% trans_default_domain 'ZzPyroBundle_index' %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets 'bundles/zzpyro/css/index.less' filter='cssrewrite' %}
		<link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock %}

{% block bodier %}
	<section id="content">
		<article>
			<h1>{{ 'content.published' |trans }}</h1>
		</article>
		<article>
			<h1>{{ 'content.goal' |trans }}</h1>
		</article>
		<article id="article_bestof">
			<h1>{{ 'content.bestof' |trans }}</h1>
			{% for bestof in bestofList %}
				<div>
					<h2>
						<a href="{{ path('zz_pyro_bestof_display', { 'id': bestof.id }) }}">
							{{ bestof.name }}
						</a>
						({{ bestof.manager.user.username }})
					</h2>
					{% import "ZzPyroBundle:BestOf:list_videos.macro.html.twig" as videos %}
					{{ videos.list(bestof) }}
				</div>
			{% endfor %}
		</article>
	</section>
	<section id="part">
		{% include 'ZzPyroBundle:Form:extract.html.twig' %}
	</section>
{% endblock %}
